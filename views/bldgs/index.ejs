<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Building CRUD</title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="mb-4 text-center">Building Management</h1>

      <div class="d-flex justify-content-between mb-3">
        <a href="/" class="btn btn-secondary">Back to Home</a>
        <a href="/bldgs/add" class="btn btn-success">Add New Building</a>
      </div>

      <% if (bldgs.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th>Building Name</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% bldgs.forEach(bldg => { %>
            <tr>
              <td><%= bldg.bldg_name %></td>
              <td class="text-nowrap">
                <!--Edit functionality is to be added
                No need for Delete
                -->
                <!-- <a
                  href="/bldgs/edit/<%= bldg.bldg_id %>"
                  class="btn btn-primary btn-sm me-2"
                  >Edit</a
                >
                 -->
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div class="alert alert-info text-center" role="alert">
        No buildings found.
        <a href="/bldgs/add" class="alert-link">Add one now!</a>
      </div>
      <% } %>
    </div>
  </body>
</html>
