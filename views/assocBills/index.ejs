<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Association Dues</title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <style>
      .disabled-row {
        opacity: 0.6;
        pointer-events: none;
      }
    </style>
  </head>
  <body>
    <%- include('../partials/navbar') %>

    <div class="container mt-5">
      <h1 class="mb-4 text-center">List of Association Dues</h1>

      <div class="d-flex justify-content-between mb-3">
        <button class="btn btn-secondary" onclick="history.back()">Back</button>
        <div>
          <a
            href="/assocBills/add/<%= unitInfo.unit_id %>"
            class="btn btn-primary me-2"
            >Create Association Dues</a
          >
          <% if (assocDues.length > 0) { %>
          <a
            href="/assocBills/export/<%= assocDues[0].bldg_id %>"
            class="btn btn-success"
            >Download Report</a
          >
          <% } %>
        </div>
      </div>

      <!-- Association Dues Section -->
      <% if (assocDues.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-light">
            <tr>
              <th>Bill No.</th>
              <th>Owner</th>
              <th>Unit No.</th>
              <th>Rate</th>
              <th>Adjustment Fee</th>
              <th>Total Amount Due</th>
              <th>Period</th>
              <th>Due Date</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% assocDues.forEach(bill => { %>
            <tr
              class="<%= bill.status === 'cancelled' ? 'disabled-row' : '' %>"
            >
              <td>M<%= bill.assoc_id %></td>
              <td><%= bill.owner_name %></td>
              <td><%= bill.unit_no %></td>
              <td>
                <%= parseFloat(bill.amount).toLocaleString('en-US', {
                minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
              </td>
              <td>
                <%= parseFloat(bill.adjustment).toLocaleString('en-US', {
                minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
              </td>
              <td>
                <strong>
                  <%= bill.total_amt ?
                  parseFloat(bill.total_amt).toLocaleString('en-US', {
                  minimumFractionDigits: 2, maximumFractionDigits: 2 }) : '0.00'
                  %>
                </strong>
              </td>
              <td>
                <%= new Date(bill.start_date).toLocaleDateString() %> - <%= new
                Date(bill.end_date).toLocaleDateString() %>
              </td>
              <td><%= new Date(bill.due_date).toLocaleDateString() %></td>
              <td>
                <% let statusClass; switch (bill.status.toLowerCase()) { case
                'paid': statusClass = 'bg-success'; break; case 'unpaid':
                statusClass = 'bg-danger'; break; case 'partial': statusClass =
                'bg-warning text-dark'; break; default: statusClass =
                'bg-secondary'; } %>
                <span class="badge <%= statusClass %>">
                  <%= bill.status.charAt(0).toUpperCase() + bill.status.slice(1)
                  %>
                </span>
              </td>
              <td class="text-nowrap">
                <a
                  href="/assocBills/paymentList/<%= bill.assoc_id %>"
                  class="btn btn-primary btn-sm me-2"
                  >Payments</a
                >
                <a
                  href="/assocBills/edit/<%= bill.assoc_id %>"
                  class="btn btn-primary btn-sm me-2"
                  >Edit</a
                >
                <a
                  href="/assocBills/<%= bill.assoc_id %>/pdf"
                  class="btn btn-info btn-sm ms-2"
                  target="_blank"
                  >Generate PDF</a
                >

                <% if (bill.status !== 'cancelled' && bill.status !== 'paid') {
                %>
                <form
                  action="/assocBills/<%= bill.assoc_id %>/cancel"
                  method="POST"
                  class="d-inline"
                >
                  <button
                    type="submit"
                    class="btn btn-warning btn-sm"
                    onclick="return confirm('Are you sure you want to cancel this bill?');"
                  >
                    Cancel
                  </button>
                </form>
                <% } %>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div class="alert alert-info text-center" role="alert">
        No Association Dues records found.
        <br />
        <strong>
          Note: If you can't see the added record yet, kindly add an owner.
        </strong>
      </div>
      <% } %>
    </div>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
