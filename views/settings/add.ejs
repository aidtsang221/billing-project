<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Settings</title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('../partials/navbar') %>

    <div class="container mt-5">
      <h1 class="mb-4 text-center">Add New Setting</h1>

      <form action="/settings/<%= bldg.bldg_id %>" method="POST">
        <div class="mb-3">
          <label for="category" class="form-label">Category</label>
          <select class="form-select" id="category" name="category" required>
            <option value="" selected disabled>-- Select a Category --</option>
            <% categories.forEach(category => { %>
            <option value="<%= category %>">
              <%= category.replace(/_/g, ' ').replace(/\b\w/g, c =>
              c.toUpperCase()) %>
            </option>
            <% }); %>
          </select>
        </div>

        <!-- This div will be shown for 'association_dues' -->
        <div id="amount-group" class="mb-3 d-none">
          <label for="amount" class="form-label">Amount (PHP)</label>
          <input
            type="number"
            class="form-control"
            id="amount"
            placeholder="e.g., 1500.00"
            step="any"
          />
        </div>

        <!-- This div will be shown for 'water' or 'electricity' or 'internet' -->
        <div id="rate-group" class="mb-3 d-none">
          <label for="rate" class="form-label" id="rate-label"
            >Consumption Rate</label
          >
          <input
            type="number"
            class="form-control"
            id="rate"
            placeholder="e.g., 150"
            step="any"
          />
        </div>

        <div id="date-fields-group" class="mb-3 d-none">
          <div class="row">
            <div class="col-md-4 mb-3">
              <label for="start-date" class="form-label">Start Date</label>
              <input
                type="date"
                class="form-control"
                id="start_date"
                name="start_date"
              />
            </div>
            <div class="col-md-4 mb-3">
              <label for="end-date" class="form-label">End Date</label>
              <input
                type="date"
                class="form-control"
                id="end_date"
                name="end_date"
              />
            </div>
            <div class="col-md-4 mb-3">
              <label for="due-date" class="form-label">Due Date</label>
              <input
                type="date"
                class="form-control"
                id="due_date"
                name="due_date"
              />
            </div>
          </div>
        </div>

        <!-- This is a hidden input that will hold the final value to be submitted -->
        <input type="hidden" name="value" id="value-input" />

        <button type="submit" class="btn btn-success" id="submit-btn">
          Add Setting
        </button>
        <a href="/settings/<%= bldg.bldg_id %>" class="btn btn-secondary ms-2"
          >Cancel</a
        >
      </form>

      <div class="mt-4 text-center">
        <a href="/settings/<%= bldg.bldg_id %>">Back to Settings</a>
      </div>
    </div>

    <script>
      const category = document.getElementById("category");

      const amountGroup = document.getElementById("amount-group");
      const amountInput = document.getElementById("amount");

      const rateGroup = document.getElementById("rate-group");
      const rateInput = document.getElementById("rate");
      const rateLabel = document.getElementById("rate-label");

      const valueInput = document.getElementById("value-input");

      const form = document.querySelector("form");

      const submitBtn = document.getElementById("submit-btn");

      const dateFieldsGroup = document.getElementById("date-fields-group");
      const startDateInput = document.getElementById("start_date");
      const endDateInput = document.getElementById("end_date");
      const dueDateInput = document.getElementById("due_date");

      category.addEventListener("change", () => {
        const selectedCategory = category.value;

        amountGroup.classList.add("d-none");
        rateGroup.classList.add("d-none");
        dateFieldsGroup.classList.add("d-none");

        amountInput.required = false;
        rateInput.required = false;
        startDateInput.required = false;
        endDateInput.required = false;
        dueDateInput.required = false;

        submitBtn.disabled = true;

        if (selectedCategory === "association_dues") {
          amountGroup.classList.remove("d-none");
          amountInput.required = true;
          amountGroup.after(dateFieldsGroup);
        } else if (
          selectedCategory === "water" ||
          selectedCategory === "electricity" ||
          selectedCategory === "internet"
        ) {
          rateGroup.classList.remove("d-none");
          rateInput.required = true;
          rateGroup.after(dateFieldsGroup);

          if (selectedCategory === "internet") {
            rateLabel.textContent = "Amount (PHP)";
            rateInput.placeholder = "e.g., 2500.00";
          } else {
            rateLabel.textContent = "Consumption Rate";
            rateInput.placeholder = "e.g., 150";
          }
        }

        if (selectedCategory) {
          submitBtn.disabled = false;
          dateFieldsGroup.classList.remove("d-none");
          startDateInput.required = true;
          endDateInput.required = true;
          dueDateInput.required = true;
        }
      });

      form.addEventListener("submit", () => {
        const selectedCategory = category.value;

        if (selectedCategory === "association_dues") {
          valueInput.value = amountInput.value;
        } else {
          valueInput.value = rateInput.value;
        }
      });
    </script>
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
