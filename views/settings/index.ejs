<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Settings</title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('../partials/navbar') %>

    <div class="container mt-5">
      <h1 class="mb-4 text-center">Settings for <%= building.bldg_name %></h1>

      <div class="d-flex justify-content-between mb-3">
        <button class="btn btn-secondary" onclick="history.back()">Back</button>
        <a href="/settings/add/<%= building.bldg_id %>" class="btn btn-success"
          >Add New Settings</a
        >
      </div>

      <% if (settings.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th>Category</th>
              <th>Rate</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>Due Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% settings.forEach(setting => { %>
            <tr>
              <td>
                <%= setting.category.replace(/_/g, ' ').replace(/\b\w/g, c =>
                c.toUpperCase()) %>
              </td>
              <td><%= setting.value %></td>
              <td><%= setting.start_date.toLocaleDateString() %></td>
              <td><%= setting.end_date.toLocaleDateString() %></td>
              <td><%= setting.due_date.toLocaleDateString() %></td>
              <td class="text-nowrap">
                <a
                  href="/settings/edit/<%= setting.setting_id %>"
                  class="btn btn-primary btn-sm me-2"
                  >Edit</a
                >
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div class="alert alert-info text-center" role="alert">
        No settings found.
        <a href="/settings/add/<%= building.bldg_id %>" class="alert-link"
          >Add one now!</a
        >
      </div>
      <% } %>
    </div>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
