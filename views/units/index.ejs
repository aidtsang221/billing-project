<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List of Units</title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('../partials/navbar') %>

    <div class="container mt-5">
      <h1 class="mb-4 text-center">Units List</h1>

      <div class="d-flex justify-content-between mb-3">
        <button class="btn btn-secondary" onclick="history.back()">Back</button>
        <a href="/units/add" class="btn btn-success">Add New Unit</a>
      </div>

      <% if (units.length > 0) { %>
      <!-- Search Bar -->
      <div class="mb-3">
        <input
          type="text"
          id="searchInput"
          class="form-control"
          placeholder="Search by Building Name or Unit No..."
        />
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th>Bldg Name</th>
              <th>Unit No.</th>
              <th>Unit Area</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% units.forEach(unit => { %>
            <tr>
              <td><%= unit.bldg_name %></td>
              <td><%= unit.unit_no %></td>
              <td><%= unit.unit_area %> sqm</td>
              <td class="text-nowrap">
                <a
                  href="/units/edit/<%= unit.unit_id %>"
                  class="btn btn-primary btn-sm me-2"
                  >Edit</a
                >
                <a
                  href="/assocBills/<%= unit.unit_id %>"
                  class="btn btn-info btn-sm me-2"
                  >Association Dues</a
                >
                <a
                  href="/utilityBills/<%= unit.unit_id %>"
                  class="btn btn-warning btn-sm me-2"
                  >Utility</a
                >
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div class="alert alert-info text-center" role="alert">
        No units found. <a href="/units/add" class="alert-link">Add one now!</a>
      </div>
      <% } %>
    </div>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script>
      // This function runs every time the user types in the search bar
      document
        .getElementById("searchInput")
        .addEventListener("keyup", function () {
          const searchValue = this.value.toLowerCase();
          const tableRows = document.querySelectorAll("tbody tr");

          tableRows.forEach((row) => {
            // get the text from the first 2 columns (building name + unit no.)
            const bldgName = row.children[0].textContent.toLowerCase();
            const unitNo = row.children[1].textContent.toLowerCase();

            // Check if either contains the search text
            if (
              bldgName.includes(searchValue) ||
              unitNo.includes(searchValue)
            ) {
              row.style.display = ""; // show row
            } else {
              row.style.display = "none"; //hide row
            }
          });
        });
    </script>
  </body>
</html>
