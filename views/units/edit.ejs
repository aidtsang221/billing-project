<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Unit</title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('../partials/navbar') %>

    <div class="container mt-5">
      <h1 class="mb-4 text-center">Edit Unit</h1>

      <form action="/units/edit/<%= unit.unit_id %>" method="POST">
        <div class="mb-3">
          <label for="bldg_id" class="form-label">Building:</label>
          <select class="form-select" id="bldg_id" name="bldg_id" required>
            <option value="">-- Select a Building --</option>
            <% bldgs.forEach(bldg => { %>
            <option value="<%= bldg.bldg_id %>" <%= bldg.bldg_id === unit.bldg_id ? 'selected' : '' %>><%= bldg.bldg_name %></option>
            <% }); %>
          </select>
        </div>

        <div class="mb-3">
          <label for="unit_no" class="form-label">Unit Number:</label>
          <input
            type="number"
            class="form-control"
            id="unit_no"
            name="unit_no"
            placeholder="e.g., 101"
            required
            min="1"
            value="<%= unit.unit_no %>"
          />
        </div>

        <div class="mb-3">
          <label for="unit_area" class="form-label">Unit Area (sqm):</label>
          <input
            type="number"
            class="form-control"
            id="unit_area"
            name="unit_area"
            placeholder="e.g., 800"
            required
            step="any"
            min="1"
            value="<%= unit.unit_area %>"
          />
        </div>

        <button type="submit" class="btn btn-success">Edit Unit</button>
        <a href="/units" class="btn btn-secondary ms-2">Cancel</a>
      </form>

      <div class="mt-4 text-center">
        <a href="/units">Back to Unit List</a>
      </div>
    </div>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
