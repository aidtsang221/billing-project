<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Utility Bills</title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('../partials/navbar') %>

    <div class="container mt-5">
      <h1 class="mb-4 text-center">List of Utility Bills</h1>

      <div class="d-flex justify-content-between mb-3">
        <a href="/" class="btn btn-secondary">Back to Home</a>
        <div>
          <a
            href="/utilityBills/add/<%= unitInfo.unit_id %>"
            class="btn btn-primary me-2"
            >Create Utility Bill</a
          >
          <% if (utilities.length > 0) { %>
          <a href="/utilityBills/exportWE" class="btn btn-success"
            >Download Water Electricity Summary</a
          >
          <a href="/utilityBills/exportI" class="btn btn-link"
            >Download Internet Summary</a
          >
          <% } %>
        </div>
      </div>

      <!-- Utility Bills Section -->
      <% if (utilities.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-light">
            <tr>
              <th>Bill No.</th>
              <th>Owner</th>
              <th>AR No</th>
              <th>Unit No</th>
              <th>Category</th>
              <th>Rate</th>
              <th>Amount Paid</th>
              <th>Previous Reading</th>
              <th>Current Reading</th>
              <th>Total Amount</th>
              <th>Period</th>
              <th>Due Date</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% utilities.forEach(bill => { %>
            <tr>
              <td>RC<%= bill.util_id %></td>
              <td><%= bill.owner_name %></td>
              <td><%= bill.ack_no %></td>
              <td><%= bill.unit_no %></td>
              <td>
                <%= bill.category.charAt(0).toUpperCase() +
                bill.category.slice(1) %>
              </td>
              <td><%= bill.rate %></td>
              <td><%= bill.amt_paid.toFixed(2) %></td>
              <td><%= bill.prev_reading %></td>
              <td><%= bill.curr_reading %></td>
              <td>
                <b
                  ><%= bill.total_amt.toLocaleString('en-US', {
                  minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></b
                >
              </td>
              <td>
                <%= new Date(bill.start_date).toLocaleDateString() %> - <%= new
                Date(bill.end_date).toLocaleDateString() %>
              </td>
              <td><%= new Date(bill.due_date).toLocaleDateString() %></td>
              <td>
                <% let statusClass; switch (bill.status.toLowerCase()) { case
                'paid': statusClass = 'bg-success'; break; case 'unpaid':
                statusClass = 'bg-danger'; break; case 'partial': statusClass =
                'bg-warning text-dark'; break; default: statusClass =
                'bg-secondary'; } %>
                <span class="badge <%= statusClass %>">
                  <%= bill.status.charAt(0).toUpperCase() + bill.status.slice(1)
                  %>
                </span>
              </td>
              <td class="text-nowrap">
                <a
                  href="/utilityBills/payment/<%= bill.util_id %>"
                  class="btn btn-primary btn-sm me-2"
                  >Edit Payment</a
                >
                <a
                  href="/utilityBills/edit/<%= bill.util_id %>"
                  class="btn btn-primary btn-sm me-2"
                  >Edit</a
                >
                <a
                  href="/utilityBills/<%= bill.util_id %>/pdf"
                  class="btn btn-info btn-sm ms-2"
                  target="_blank"
                  >Generate PDF</a
                >
                <!-- <form
                  action="/billing/utility/delete/<%= bill.util_id %>"
                  method="POST"
                  class="d-inline"
                >
                  <button
                    type="submit"
                    class="btn btn-danger btn-sm"
                    onclick="return confirm('Are you sure you want to delete this utility bill record?');"
                  >
                    Delete
                  </button>
                </form> -->
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div class="alert alert-info text-center" role="alert">
        No utility bill records found.
      </div>
      <% } %>
    </div>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
