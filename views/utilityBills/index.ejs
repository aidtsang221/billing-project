<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Utility Bills</title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('../partials/navbar') %>

    <div class="container mt-5">
      <h1 class="mb-4 text-center">List of Utility Bills</h1>

      <% let hasUtilities = (utilities && utilities.length > 0); %>

      <div class="row mb-3">
      <!-- Back button -->
      <div class="col-12 col-md-3 mb-2 mb-md-0">
        <button class="btn btn-secondary w-100" onclick="history.back()">Back</button>
      </div>

      <!-- Filters -->
        <div class="col-12 col-md-3 mb-2 mb-md-0">
          <form method="get" action="">
            <select class="form-select" name="category" onchange="this.form.submit()">
              <option value="">All Categories</option>
              <option value="water" <%= (req.query.category === 'water') ? 'selected' : '' %>>Water</option>
              <option value="electricity" <%= (req.query.category === 'electricity') ? 'selected' : '' %>>Electricity</option>
              <option value="internet" <%= (req.query.category === 'internet') ? 'selected' : '' %>>Internet</option>
              <option value="we" <%= (req.query.category === 'we') ? 'selected' : '' %>>Water + Electricity</option>
            </select>
          </form>
        </div>
      
      <div class="col-12 col-md-6">
        <div class="d-flex flex-wrap justify-content-md-end">
          <a href="/utilityBills/add/<%= unitInfo.unit_id %>" class="btn btn-primary mb-2 me-2">
            Create Utility Bill
          </a>

          <% if (hasUtilities) { %>
            <a href="/utilityBills/exportWE" class="btn btn-success mb-2 me-2">
              Download W+E
            </a>
            <a href="/utilityBills/exportI" class="btn btn-success mb-2">
              Download Net
            </a>
          <% } %>
        </div>
      </div>
    <!-- Separate row for Generate PDF -->
     <% if (hasUtilities) { %>
      <div class="row mb-3">
        <div class="col-12">
          <form id="pdfForm" method="POST" action="/utilityBills/exportSelected" target="_blank">
            <input type="hidden" name="billIds" id="billIds" />
            <button type="submit" class="btn btn-success w-100 w-md-auto">Generate Selected PDF</button>
          </form>
        </div>
      </div>
    <% } %>


      <!-- Utility Bills Section -->
      <% if (hasUtilities) { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-light">
            <tr>
              <th>
                <input type="checkbox" id="selectAll" />
              </th>
              <th>Bill No.</th>
              <th>Owner</th>
              <th>Unit No</th>
              <th>Category</th>
              <th>Rate</th>
              <th>Previous Reading</th>
              <th>Current Reading</th>
              <th>Total Amount</th>
              <th>Period</th>
              <th>Due Date</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% utilities.forEach(bill => { %>
            <tr>
              <td>
                <input type="checkbox" name="selectedBills" value="<%= bill.util_id %>" class="billCheckbox" />
              </td>
              <td>RC<%= bill.util_id %></td>
              <td><%= bill.owner_name %></td>
              <td><%= bill.unit_no %></td>
              <td>
                <%= bill.category.charAt(0).toUpperCase() +
                bill.category.slice(1) %>
              </td>
              <td><%= bill.rate %></td>
              <td><%= bill.prev_reading %></td>
              <td><%= bill.curr_reading %></td>
              <td>
                <b
                  ><%= bill.total_amt.toLocaleString('en-US', {
                  minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></b
                >
              </td>
              <td>
                <%= new Date(bill.start_date).toLocaleDateString() %> - <%= new
                Date(bill.end_date).toLocaleDateString() %>
              </td>
              <td><%= new Date(bill.due_date).toLocaleDateString() %></td>
              <td>
                <% let statusClass; switch (bill.status.toLowerCase()) { case
                'paid': statusClass = 'bg-success'; break; case 'unpaid':
                statusClass = 'bg-danger'; break; case 'partial': statusClass =
                'bg-warning text-dark'; break; default: statusClass =
                'bg-secondary'; } %>
                <span class="badge <%= statusClass %>">
                  <%= bill.status.charAt(0).toUpperCase() + bill.status.slice(1)
                  %>
                </span>
              </td>
              <td class="text-nowrap">
                <a
                  href="/utilityBills/paymentList/<%= bill.util_id %>"
                  class="btn btn-primary btn-sm me-2"
                  >Payments</a
                >
                <a
                  href="/utilityBills/edit/<%= bill.util_id %>"
                  class="btn btn-primary btn-sm me-2"
                  >Edit</a
                >
                <!-- <form
                  action="/billing/utility/delete/<%= bill.util_id %>"
                  method="POST"
                  class="d-inline"
                >
                  <button
                    type="submit"
                    class="btn btn-danger btn-sm"
                    onclick="return confirm('Are you sure you want to delete this utility bill record?');"
                  >
                    Delete
                  </button>
                </form> -->
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div class="alert alert-info text-center" role="alert">
        No utility bill records found.
        <br />
        <strong>
          Note: If you can't see the added record yet, kindly add an owner.
        </strong>
      </div>
      <% } %>
    </div>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script>
      const selectAll = document.getElementById("selectAll");
      const checkboxes = document.querySelectorAll(".billCheckbox");
      const pdfForm = document.getElementById("pdfForm");
      const billIdsInput = document.getElementById("billIds");

      // Select/Deselect all
      selectAll.addEventListener("change", () => {
        checkboxes.forEach(cb => cb.checked = selectAll.checked);
      });

      // On form submit, gather selected IDs
      pdfForm.addEventListener("submit", (e) => {
        const selected = [...checkboxes]
          .filter(cb => cb.checked)
          .map(cb => cb.value);

        if (selected.length === 0) {
          e.preventDefault();
          alert("Please select at least one bill to generate PDF.");
          return;
        }

        billIdsInput.value = JSON.stringify(selected); // send as JSON string
      });
    </script>
  </body>
</html>
