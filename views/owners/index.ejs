<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Unit Owner Management</title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <style>
      .btn-billing {
        background-color: #20c997;
        border-color: #20c997;
        color: white;
      }
      .btn-billing:hover {
        background-color: #17a2b8;
        border-color: #17a2b8;
      }
    </style>
  </head>
  <body>
    <%- include('../partials/navbar') %>

    <div class="container mt-5">
      <h1 class="mb-4 text-center">Owners List</h1>

      <div class="d-flex justify-content-between mb-3">
        <a href="/" class="btn btn-secondary">Back to Home</a>
        <a href="/owners/add" class="btn btn-success">Add New Owner</a>
      </div>

      <% if (owners.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
          <thead class="table-dark">
            <tr>
              <th scope="col">Owner Name</th>
              <th scope="col">Unit</th>
              <th scope="col" class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% owners.forEach(owner => { %>
            <tr>
              <td><%= owner.first_name %> <%= owner.last_name %></td>
              <td>Unit <%= owner.unit_no %></td>
              <td class="text-center text-nowrap">
                <a
                  href="/owners/edit/<%= owner.owner_id %>"
                  class="btn btn-sm btn-primary"
                  >Edit</a
                >
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div class="alert alert-info text-center" role="alert">
        No Owners Now.
        <a href="/owners/add" class="alert-link">Add one now!</a>
      </div>
      <% } %>
    </div>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
